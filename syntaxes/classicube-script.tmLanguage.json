{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "ClassiCube Script",
  "patterns": [
    { "include": "#label" },
    { "include": "#keyword-control" },
    { "include": "#variable-name" },
    { "include": "#comment" },
    { "include": "#numeric-literal" },
    { "include": "#boolean-literal" },
    { "include": "#command-with-interpolated-string" },
    { "include": "#command" },
    { "include": "#builtin-variable" },
    { "include": "#variable-in-string" }
  ],
  "repository": {
    "label": {
      "name": "entity.name.function.classicube-script",
      "match": "#(.*)\\b"
    },
    "keyword-control": {
      "name": "keyword.control.classicube-script",
      "match": "\\b(goto|call|jump|quit)\\b"
    },
    "variable": {
      "name": "variable.other.classicube-script",
      "match": "[a-zA-Z_][a-zA-Z0-9_\\-]*"
    },
    "variable-name": {
      "name": "keyword.operator.new.classicube-script",
      "begin": "{",
      "end": "}",
      "patterns": [
        { "include": "#builtin-variable" },
        { "include": "#variable" }
      ]
    },
    "comment": {
      "name": "comment.line.classicube-script",
      "match": "^\\s*//.*"
    },
    "numeric-literal": {
      "name": "constant.numeric.classicube-script",
      "match": "\\b[0-9]+\\b"
    },
    "boolean-literal": {
      "name": "constant.language.classicube-script",
      "match": "\\b(true|false)\\b"
    },
    "command": {
      "name": "keyword.operator.new.classicube-script",
      "match": "\\b(tempblock|tempchunk|delay|item|goto|call|jump|newthread|set|setadd|setsub|setmul|setdiv|setmod|setrandrange|setrandrangedecimal|setrandlist|setround|setroundup|setrounddown|setblockid|show|resetdata|freeze|unfreeze|look|stare|env|motd|setspawn|reply|replysilent|reach|quit|terminate|if|ifnot)\\b"
    },
    "command-with-interpolated-string": {
      "name": "keyword.operator.new.classicube-script",
      "begin": "\\b(msg|cpemsg|cmd|kill)\\b",
      "end": "$",
      "patterns": [{ "include": "#interpolated-string" }]
    },
    "builtin-variable": {
      "name": "support.type.builtin.classicube-script",
      "match": "\\b(cef|MBX|MBY|MBZ|PlayerX|PlayerY|PlayerZ|PlayerPX|PlayerPY|PlayerPZ|PlayerYaw|PlayerPitch|msgDelay|msgDelayMultiplier|MBCoords|PlayerCoords|PlayerCoordsDecimal|PlayerCoordsPrecise|runArg0|runArg1|runArg2|runArg3|runArg4|runArg5|runArg6|runArg7|runArg8|runArg9|epochMS)\\b"
    },
    "interpolated-string": {
      "name": "string.interpolated.classicube-script",
      "begin": " ",
      "end": "$",
      "patterns": [
        { "include": "#color-code" },
        { "include": "#variable-in-string" },
        { "include": "#variable-name" }
      ]
    },
    "variable-in-string": {
      "name": "support.type.builtin.classicube-script",
      "match": "(@nick|@p)"
    },
    "color-code": {
      "name": "constant.character.escape.classicube-script",
      "match": "(%|&)[0-9a-zA-z]"
    }
  },
  "scopeName": "source.classicube-script"
}
